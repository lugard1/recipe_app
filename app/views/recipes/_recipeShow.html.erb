<div id="<%= dom_id recipe %>" class="dom-recipe-class2">

  <p class = "show_name"><strong><%= recipe.name %></strong></p>

  <div class = "show-display">
    <div class = "recipe-time">
      <p>Preparation time: <%= recipe.preparation_time %> </p>
      <p>Cooking time: <%= recipe.cooking_time %> </p>
      <p>Steps go here...</p>
    </div>
    <div class="public-label">
      <%= render "checkbox", recipe: recipe %>
    </div>
  <div>

  </div>
  <div class = "show-buttons">
    <%= link_to 'Generate Shopping List', general_shopping_list_recipe_path(current_user), class: 'nav-link' %>
    <%= link_to 'Add Ingredient', new_recipe_recipe_food_path(recipe), class: 'nav-link' %>
  </div>

  <div class="show-recipe-foods">
    <h3>Recipe Foods:</h3>
    <ul>

      <% @recipeshow.recipe_foods.each do |recipe_food| %>
        <p>Food: <%= recipe_food.food.name %></p>
        <p>Quantity: <%= recipe_food.quantity %></p>
        <p>Value: <%= recipe_food.value %></p>
         <%= form_with(model: [recipe, recipe_food], method: :delete, local: true) do |form| %>
          <%= form.submit 'Delete', data: { confirm: 'Are you sure?' } %>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>